# ============================================================================
# NFT Admin Dashboard - FINAL Production Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control
# ============================================================================

# ============================================================================
# REQUIRED: Supabase Configuration
# ============================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# ============================================================================
# REQUIRED: Stripe Configuration (Production Keys)
# ============================================================================
# Get these from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here

# Get this from: https://dashboard.stripe.com/webhooks (create endpoint first)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================================================
# REQUIRED: Server Configuration
# ============================================================================
PORT=3000
NODE_ENV=production

# ============================================================================
# OPTIONAL: Development/Testing Configuration
# ============================================================================
# Set to 'true' to enable test endpoints (/test/bnpl, /test/subscription, etc.)
# NEVER set to 'true' in production!
ENABLE_TEST_ENDPOINTS=false

# ============================================================================
# OPTIONAL: Security Configuration
# ============================================================================
# Rate limiting configuration (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ============================================================================
# OPTIONAL: Logging Configuration
# ============================================================================
# Log levels: error, warn, info, debug
LOG_LEVEL=info

# ============================================================================
# OPTIONAL: Database Configuration
# ============================================================================
# Database connection timeout (milliseconds)
DB_TIMEOUT=10000

# Maximum retry attempts for database operations
DB_MAX_RETRIES=3

# ============================================================================
# OPTIONAL: Stripe Configuration
# ============================================================================
# Stripe API timeout (milliseconds)
STRIPE_TIMEOUT=10000

# ============================================================================
# NOTES:
# ============================================================================
# 1. Replace ALL placeholder values with your actual API keys
# 2. Never commit this file to version control
# 3. Use different keys for development/staging/production
# 4. Test your webhook endpoint before going live
# 5. Monitor your logs for any errors or issues
# ============================================================================
